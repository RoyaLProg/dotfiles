#include ~/.cache/wal/colors-kitty.conf

include palenight.conf

font_family     JetBrainsMonoNF SemiBold
font_size 	    13.0
bold_font       auto
italic_font      auto
bold_italic_font auto

background_opacity 0.7

confirm_os_window_close 0

enable_audio_bell no

cursor none
cursor_shape block
#selection_foreground #000000
#selection_background #F5FBFF

window_margin_width 0
window_margin_height 0
window_padding_width 0
window_padding_height 0

map ctrl+shift+t new_tab_with_cwd 
map ctrl+shift+enter new_window_with_cwd

tab_bar_edge bottom
tab_bar_align left
tab_bar_style custom
tab_bar_min_tabs 1

tab_activity_symbol none
bell_on_tab no
tab_separator ""
tab_bar_margin_width 0.0
tab_bar_margin_height 0.0 0.0
tab_title_template "{f'{title[:30]}â€¦' if title.rindex(title[-1]) + 1 > 30 else (title.center(6) if (title.rindex(title[-1]) + 1) % 2 == 0 else title.center(5))}"
active_tab_font_style   bold

active_tab_foreground   #000
active_tab_background   #e1acff
active_tab_font_style   bold-italic
inactive_tab_foreground #000
inactive_tab_background #434758
inactive_tab_font_style normal
